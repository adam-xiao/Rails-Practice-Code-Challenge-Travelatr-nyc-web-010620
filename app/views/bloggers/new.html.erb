<% if flash[:message] %>
  <h3 style="color: red"><%= flash[:message]%></h3>
<% end %>


<h1>Blogger Create Form</h1>

<%= form_for @blogger do |f| %>
    
    <label>Name:</label><br>
    <%= f.text_field :name %><br>

    <label>Bio:</label><br>
    <%= f.text_area :bio %><br>

    <label>Age:</label><br>
    <%= f.number_field :age %><br>
    <%= f.submit "Create Blogger" %>

<% end %>
